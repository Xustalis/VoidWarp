<Window x:Class="VoidWarp.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VoidWarp.Windows"
        mc:Ignorable="d"
        Title="虚空传送" 
        Height="720" Width="1080"
        MinHeight="600" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40" 
                      ResizeBorderThickness="6" 
                      CornerRadius="0" 
                      GlassFrameThickness="0" 
                      UseAeroCaptionButtons="False"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <!-- ==================== Theme Colors ==================== -->
        <Color x:Key="BackgroundColor">#1A1A2E</Color>
        <Color x:Key="SidebarColor">#1E1E3F</Color>
        <Color x:Key="SurfaceColor">#252545</Color>
        <Color x:Key="SurfaceLightColor">#2A2A5A</Color>
        
        <Color x:Key="PrimaryColor">#6C63FF</Color>
        <Color x:Key="AccentColor">#FF9800</Color>
        
        <Color x:Key="TextPrimaryColor">#FFFFFFFF</Color>
        <Color x:Key="TextSecondaryColor">#B0B0C0</Color>
        
        <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
        <SolidColorBrush x:Key="SidebarBrush" Color="{StaticResource SidebarColor}"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
        <SolidColorBrush x:Key="SurfaceLightBrush" Color="{StaticResource SurfaceLightColor}"/>
        <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>

        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <local:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVis"/>

        <!-- ==================== Styles ==================== -->
        
        <!-- Window Caption Button Style -->
        <Style x:Key="CaptionButtonStyle" TargetType="Button">
            <Setter Property="WindowChrome.IsHitTestVisibleInChrome" Value="True"/>
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <TextBlock Text="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}" 
                                       FontFamily="Segoe MDL2 Assets" 
                                       FontSize="10"
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center" 
                                       Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource SurfaceLightBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource CaptionButtonStyle}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E81123"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="16,10"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.7"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="{StaticResource SurfaceLightBrush}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- Ghost / Outline Button Style -->
        <Style x:Key="GhostButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1A6C63FF"/> 
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ToggleSwitchStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <Border x:Name="Background" Background="{StaticResource SurfaceLightBrush}" CornerRadius="12"/>
                            <Border x:Name="Dot" Background="White" Width="18" Height="18" CornerRadius="9" HorizontalAlignment="Left" Margin="3">
                                <Border.RenderTransform>
                                    <TranslateTransform X="0"/>
                                </Border.RenderTransform>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Background" Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="Dot" Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)" To="26" Duration="0:0:0.15"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="Dot" Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)" To="0" Duration="0:0:0.15"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Border Background="{StaticResource BackgroundBrush}" CornerRadius="0" BorderThickness="0">
        <Grid>
            <!-- Background Decoration (Optional, matching Android style gradients) -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Width Correction for Grip -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Sidebar -->
            <Grid Grid.Column="0" Grid.RowSpan="2" Background="{StaticResource SidebarBrush}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Title & Downloads -->
                    <RowDefinition Height="Auto"/> <!-- Device ID -->
                    <RowDefinition Height="Auto"/> <!-- Receive Toggle -->
                    <RowDefinition Height="Auto"/> <!-- Diagnostic Info -->
                    <RowDefinition Height="*"/>    <!-- Nearby Peers -->
                    <RowDefinition Height="Auto"/> <!-- Bottom Buttons -->
                </Grid.RowDefinitions>
                
                <!-- Title & Downloads Button -->
                <Grid Margin="25,45,25,15">
                    <TextBlock Text="虚空传送" Foreground="{StaticResource PrimaryBrush}" FontSize="32" FontWeight="ExtraBold"/>
                    <Button Content="已接收文件" HorizontalAlignment="Right" VerticalAlignment="Center" 
                            Style="{StaticResource SecondaryButtonStyle}" Padding="10,5" FontSize="11"
                            Command="{Binding OpenDownloadsCommand}"/>
                </Grid>
                
                <!-- Device ID Badge -->
                <Border Grid.Row="1" Margin="25,0,25,25" Background="#33FF9800" CornerRadius="4" HorizontalAlignment="Left" Padding="8,4">
                    <TextBlock Foreground="{StaticResource AccentBrush}" FontWeight="SemiBold" FontSize="11">
                        <Run Text="设备ID: "/>
                        <Run Text="{Binding DeviceId, Mode=OneWay}"/>
                    </TextBlock>
                </Border>
                
                <!-- Receive Card -->
                <Border Grid.Row="2" Margin="25,0,25,25" Background="{StaticResource SurfaceBrush}" CornerRadius="12" Padding="15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Border Width="40" Height="40" Background="{StaticResource SurfaceLightBrush}" CornerRadius="8" Margin="0,0,12,0">
                            <TextBlock Text="&#xE8F4;" FontFamily="Segoe MDL2 Assets" FontSize="20" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding ReceiveStatusTitle, Mode=OneWay}" Foreground="White" FontWeight="Bold" FontSize="15"/>
                            <TextBlock Text="{Binding ReceiveStatusSubtitle, Mode=OneWay}" Foreground="{StaticResource TextSecondaryBrush}" FontSize="11" Margin="0,2,0,0"/>
                        </StackPanel>
                        <ToggleButton Grid.Column="2" Style="{StaticResource ToggleSwitchStyle}" IsChecked="{Binding IsReceiving}" Command="{Binding ToggleReceiverCommand}"/>
                    </Grid>
                </Border>
                
                <!-- Diagnostic Info -->
                <StackPanel Grid.Row="3" Margin="25,0,25,25">
                    <TextBlock Text="诊断信息" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" FontWeight="Bold" Margin="0,0,0,8"/>
                    <TextBlock Text="{Binding LocalIpInfo, Mode=OneWay, StringFormat='本机 IP: {0}'}" Foreground="{StaticResource TextSecondaryBrush}" FontSize="11" Margin="0,0,0,4"/>
                    <Grid>
                        <TextBlock Foreground="{StaticResource TextSecondaryBrush}" FontSize="11" VerticalAlignment="Center">
                            <Run Text="发现: "/>
                            <Run Text="{Binding DiscoveryStatusLabel, Mode=OneWay}" Foreground="{StaticResource PrimaryBrush}"/>
                            <Run Text=" | 监听: "/>
                            <Run Text="{Binding ReceiverPort, Mode=OneWay}"/>
                        </TextBlock>
                        <Button Content="调试日志" HorizontalAlignment="Right" Style="{StaticResource GhostButtonStyle}" BorderThickness="0" Padding="5,2" FontSize="10" Command="{Binding ToggleLogsCommand}"/>
                    </Grid>
                </StackPanel>
                
                <!-- Nearby Peers -->
                <Border Grid.Row="4" Margin="25,0,25,25" Background="{StaticResource SurfaceBrush}" CornerRadius="12">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="附近设备" Margin="15,12" Foreground="White" FontWeight="Bold" FontSize="14"/>
                        
                        <!-- Empty State -->
                        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="{Binding HasNoPeers, Converter={StaticResource BoolToVis}}">
                            <!-- Chain Link Icon -->
                            <TextBlock Text="&#xE71B;" FontFamily="Segoe MDL2 Assets" FontSize="40" Foreground="{StaticResource SurfaceLightBrush}" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="未发现设备" Foreground="{StaticResource TextSecondaryBrush}" FontSize="13" HorizontalAlignment="Center"/>
                            <Button Content="手动添加" Style="{StaticResource GhostButtonStyle}" Margin="0,15,0,0" Padding="15,5" 
                                    Command="{Binding AddManualPeerCommand}" BorderBrush="{StaticResource PrimaryBrush}" BorderThickness="1" Foreground="{StaticResource PrimaryBrush}" Background="Transparent"/>
                        </StackPanel>
                        
                        <!-- Peers List -->
                        <ListBox Grid.Row="1" ItemsSource="{Binding Peers}" SelectedItem="{Binding SelectedPeer}" Background="Transparent" BorderThickness="0" Margin="5" Visibility="{Binding HasNoPeers, Converter={StaticResource InverseBoolToVis}}">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border x:Name="ItemBorder" Background="Transparent" CornerRadius="8" Padding="10" Margin="0,2">
                                                    <ContentPresenter/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="ItemBorder" Property="Background" Value="{StaticResource SurfaceLightBrush}"/>
                                                    </Trigger>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="ItemBorder" Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Border Width="30" Height="30" CornerRadius="15" Background="{StaticResource PrimaryBrush}" Margin="0,0,10,0">
                                            <TextBlock Text="&#xE7F4;" FontFamily="Segoe MDL2 Assets" FontSize="14" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding DeviceName}" Foreground="White" FontWeight="SemiBold" FontSize="13"/>
                                            <TextBlock Text="{Binding DisplayName}" Foreground="{StaticResource TextSecondaryBrush}" FontSize="10"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>
                
                <!-- Sidebar Bottom Buttons -->
                <Grid Grid.Row="5" Margin="25,0,25,25">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Content="{Binding ScanButtonText}" Style="{StaticResource ModernButtonStyle}" Margin="0,0,8,0" Command="{Binding ScanCommand}"/>
                    <Button Grid.Column="1" Content="+ 添加" Style="{StaticResource SecondaryButtonStyle}" Margin="8,0,0,0" Command="{Binding AddManualPeerCommand}"/>
                </Grid>
            </Grid>
            
            <!-- Main Content Area -->
            <Grid Grid.Column="1" Grid.Row="1" Margin="25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Compact Status -->
                    <RowDefinition Height="*"/>    <!-- History -->
                </Grid.RowDefinitions>

                
                <!-- File Action Panel (Visible when Idle) -->
                <Border Grid.Row="0" Margin="0,0,0,20" Background="{StaticResource SidebarBrush}" CornerRadius="16" Padding="25"
                        Visibility="{Binding IsTransferring, Converter={StaticResource InverseBoolToVis}}">
                    <StackPanel>
                        <!-- Header -->
                        <Grid Margin="0,0,0,20">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE8A5;" FontFamily="Segoe MDL2 Assets" FontSize="20" Foreground="White" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                <TextBlock Text="发送文件" Foreground="White" FontWeight="Bold" FontSize="18" VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <!-- Send Button (Always visible, disabled if invalid) -->
                            <Button HorizontalAlignment="Right" Style="{StaticResource ModernButtonStyle}" Padding="20,6" 
                                    Command="{Binding SendAllFilesCommand}" 
                                    IsEnabled="{Binding CanSend}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE709;" FontFamily="Segoe MDL2 Assets" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="立即发送" VerticalAlignment="Center" FontSize="14"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <!-- Empty State / File Picker -->
                        <Button Content="点击选择文件" Style="{StaticResource GhostButtonStyle}" BorderThickness="1" BorderBrush="#33FFFFFF" 
                                Height="80" FontSize="15" Command="{Binding PickFileCommand}"
                                Visibility="{Binding HasPendingFiles, Converter={StaticResource InverseBoolToVis}}">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="12">
                                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <TextBlock Text="&#xE8F4;" FontFamily="Segoe MDL2 Assets" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,8" Foreground="{StaticResource PrimaryBrush}"/>
                                            <TextBlock Text="点击选择要发送的文件" Foreground="{StaticResource TextSecondaryBrush}"/>
                                        </StackPanel>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- Pending Files List (Visible when files selected) -->
                        <StackPanel Visibility="{Binding HasPendingFiles, Converter={StaticResource BoolToVis}}">
                            <ScrollViewer MaxHeight="120" VerticalScrollBarVisibility="Auto" Margin="0,0,0,15">
                                <ItemsControl ItemsSource="{Binding PendingFiles}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="{StaticResource BackgroundBrush}" CornerRadius="8" Padding="12,8" Margin="0,0,0,6">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="&#xE7C3;" FontFamily="Segoe MDL2 Assets" FontSize="14" Foreground="{StaticResource PrimaryBrush}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                                        <TextBlock Text="{Binding FileName}" Foreground="White" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                    <Button Grid.Column="1" Command="{Binding DataContext.RemoveFileCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}" 
                                                            Style="{StaticResource CaptionButtonStyle}" Tag="&#xE711;" Width="24" Height="24" Foreground="{StaticResource TextSecondaryBrush}"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                            
                            <Button Content="+ 添加更多文件" Style="{StaticResource GhostButtonStyle}" HorizontalAlignment="Left" Padding="15,5" FontSize="12" Command="{Binding PickFileCommand}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Active Transfer Status (Compact Banner) -->
                <Border Grid.Row="0" Margin="0,0,0,20" Visibility="{Binding IsTransferring, Converter={StaticResource BoolToVis}}">
                    <Border Background="{StaticResource SidebarBrush}" CornerRadius="12" Padding="20,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel VerticalAlignment="Center" Margin="0,0,20,0">
                                <TextBlock Text="正在传输..." Foreground="{StaticResource PrimaryBrush}" FontWeight="Bold" FontSize="14"/>
                                <TextBlock Text="{Binding StatusMessage}" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" Margin="0,4,0,0" TextTrimming="CharacterEllipsis"/>
                                
                                <!-- Progress Bar -->
                                <Grid Margin="0,10,0,0">
                                    <ProgressBar Height="8" Value="{Binding ProgressValue}" Minimum="0" Maximum="100" 
                                                 Background="{StaticResource BackgroundBrush}" Foreground="{StaticResource PrimaryBrush}" BorderThickness="0">
                                        <ProgressBar.Template>
                                            <ControlTemplate TargetType="ProgressBar">
                                                <Grid x:Name="TemplateRoot">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="4"/>
                                                    <Border x:Name="PART_Indicator" Background="{TemplateBinding Foreground}" CornerRadius="4" HorizontalAlignment="Left"/>
                                                </Grid>
                                            </ControlTemplate>
                                        </ProgressBar.Template>
                                    </ProgressBar>
                                </Grid>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="{Binding ProgressValue, StringFormat='{}{0:F0}%'}" Foreground="White" FontWeight="Bold" FontSize="24" VerticalAlignment="Center" Margin="0,0,20,0"/>
                                <Button Content="&#xE711;" FontFamily="Segoe MDL2 Assets" Style="{StaticResource CaptionButtonStyle}" Width="32" Height="32" Command="{Binding CancelTransferCommand}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Border>

                
                <!-- Recent Transfers / Received Files Card (Major Area) -->
                <Border Grid.Row="1" Background="{StaticResource SidebarBrush}" CornerRadius="16" Padding="25">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <Grid Grid.Row="0" Margin="0,0,0,20">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE8B7;" FontFamily="Segoe MDL2 Assets" FontSize="20" Foreground="White" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                <TextBlock Text="传输记录" Foreground="White" FontWeight="Bold" FontSize="20" VerticalAlignment="Center"/>
                            </StackPanel>
                            <Button Content="一键清空" HorizontalAlignment="Right" Style="{StaticResource GhostButtonStyle}" BorderThickness="0" Padding="12,5" FontSize="12" 
                                    Command="{Binding ClearAllHistoryCommand}" 
                                    Visibility="{Binding HasNoReceivedFiles, Converter={StaticResource InverseBoolToVis}}"/>
                        </Grid>

                        <!-- Empty History Placeholder -->
                        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" 
                                    Visibility="{Binding HasNoReceivedFiles, Converter={StaticResource BoolToVis}}">
                            <TextBlock Text="&#xE8B7;" FontFamily="Segoe MDL2 Assets" FontSize="64" Foreground="{StaticResource SurfaceBrush}" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                            <TextBlock Text="暂无传输记录" Foreground="{StaticResource TextSecondaryBrush}" FontSize="16"/>
                        </StackPanel>
                        
                        <!-- History List -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding ReceivedFiles}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{StaticResource BackgroundBrush}" CornerRadius="12" Padding="15" Margin="0,0,0,12">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <Border Width="40" Height="40" Background="{StaticResource SurfaceBrush}" CornerRadius="8" Margin="0,0,15,0">
                                                    <TextBlock Text="&#xE8B7;" FontFamily="Segoe MDL2 Assets" FontSize="20" Foreground="{StaticResource PrimaryBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding FileName}" Foreground="White" FontWeight="SemiBold" FontSize="14" TextTrimming="CharacterEllipsis"/>
                                                    <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                                        <TextBlock Text="{Binding SenderName, StringFormat='来自: {0}'}" Foreground="{StaticResource TextSecondaryBrush}" FontSize="11"/>
                                                        <TextBlock Text=" | " Foreground="{StaticResource SurfaceBrush}" FontSize="11" Margin="5,0"/>
                                                        <TextBlock Text="{Binding FileSize}" Foreground="{StaticResource TextSecondaryBrush}" FontSize="11"/>
                                                    </StackPanel>
                                                </StackPanel>
                                                
                                                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                                    <!-- Status Label (Success/Failed/Deleted) -->
                                                    <Border Padding="10,4" CornerRadius="4" Margin="0,0,15,0" UseLayoutRounding="True">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Success">
                                                                        <Setter Property="Background" Value="#2200E676"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Failed">
                                                                        <Setter Property="Background" Value="#22EE2222"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Deleted">
                                                                        <Setter Property="Background" Value="#11FFFFFF"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <TextBlock FontSize="10" FontWeight="Bold">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Text" Value="进行中"/>
                                                                    <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Status}" Value="Success">
                                                                            <Setter Property="Text" Value="成功"/>
                                                                            <Setter Property="Foreground" Value="#00E676"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Status}" Value="Failed">
                                                                            <Setter Property="Text" Value="失败"/>
                                                                            <Setter Property="Foreground" Value="#FFFF4444"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Status}" Value="Deleted">
                                                                            <Setter Property="Text" Value="已删除"/>
                                                                            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                    </Border>
                                                    
                                                    <Button Content="打开" Style="{StaticResource GhostButtonStyle}" Padding="15,4" FontSize="11" 
                                                            Visibility="{Binding FileExists, Converter={StaticResource BoolToVis}}"
                                                            Command="{Binding DataContext.OpenFileCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}"/>
                                                    <Button Content="&#xE74D;" FontFamily="Segoe MDL2 Assets" Foreground="{StaticResource TextSecondaryBrush}" Style="{StaticResource CaptionButtonStyle}" Width="32" Height="32" Margin="5,0,0,0"
                                                            Command="{Binding DataContext.RemoveHistoryItemCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>


                <!-- Technical Logs Overlay (Drawer-like) -->
                <Border Grid.RowSpan="3" Background="#EE1A1A2E" CornerRadius="16" Margin="0" Visibility="{Binding ShowLogs, Converter={StaticResource BoolToVis}}" Panel.ZIndex="100">
                    <Grid Margin="30">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <Grid Grid.Row="0" Margin="0,0,0,20">
                            <TextBlock Text="系统日志" Foreground="White" FontWeight="Bold" FontSize="20" VerticalAlignment="Center"/>
                            <Button HorizontalAlignment="Right" Command="{Binding ToggleLogsCommand}" Style="{StaticResource CaptionButtonStyle}" Tag="&#xE711;" Width="32" Height="32"/>
                        </Grid>
                        
                        <Border Grid.Row="1" Background="{StaticResource BackgroundBrush}" CornerRadius="10" Padding="15">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding Logs}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" Foreground="{StaticResource TextSecondaryBrush}" FontFamily="Consolas" FontSize="12" Margin="0,0,0,5" TextWrapping="Wrap"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Border>
                        
                        <Button Grid.Row="2" Content="清空日志" Margin="0,20,0,0" HorizontalAlignment="Right" Style="{StaticResource SecondaryButtonStyle}" Padding="20,8" Command="{Binding ClearLogsCommand}"/>
                    </Grid>
                </Border>

            </Grid>

            <!-- Title Bar Overlay (for Window Chrome) -->
            <Grid Grid.Column="0" Grid.ColumnSpan="2" Height="40" VerticalAlignment="Top" Background="Transparent" Panel.ZIndex="1000">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Style="{StaticResource CaptionButtonStyle}" Tag="&#xE921;" Click="MinimizeButton_Click"/>
                    <Button x:Name="MaximizeButton" Style="{StaticResource CaptionButtonStyle}" Tag="&#xE922;" Click="MaximizeButton_Click"/>
                    <Button Style="{StaticResource CloseButtonStyle}" Tag="&#xE8BB;" Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
