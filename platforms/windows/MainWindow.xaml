                <!-- Header -->
                <StackPanel Grid.Row="0">
                    <TextBlock Text="VoidWarp" FontSize="24" FontWeight="Bold" Foreground="#6c63ff"/>
                    <TextBlock Text="{Binding DeviceIdText}" Foreground="#888" FontSize="11" Margin="0,5,0,0"/>
                    <TextBlock Text="{Binding LocalNetworkText}" Foreground="#666" FontSize="10" Margin="0,4,0,0" TextWrapping="Wrap"/>
                </StackPanel>
                
                <!-- Discovery Status -->
                <StackPanel Grid.Row="1" Margin="0,15,0,10">
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="10" Height="10" Fill="{Binding DiscoveryStatusColor}" Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding DiscoveryStatusText}" Foreground="#aaa" FontSize="12"/>
                    </StackPanel>
                    <TextBlock Text="{Binding DiscoveryDetailText}" Foreground="#666" FontSize="10" Margin="18,4,0,0" TextWrapping="Wrap"/>
