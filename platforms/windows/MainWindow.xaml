<Window x:Class="VoidWarp.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VoidWarp.Windows"
        mc:Ignorable="d"
        Title="VoidWarp" 
        Height="780" 
        Width="1200"
        MinHeight="600"
        MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40" 
                      ResizeBorderThickness="6" 
                      CornerRadius="0" 
                      GlassFrameThickness="0" 
                      UseAeroCaptionButtons="False"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <!-- ==================== Theme Colors ==================== -->
        <Color x:Key="BackgroundColor">#121212</Color>
        <Color x:Key="SurfaceColor">#1E1E2E</Color>
        <Color x:Key="SurfaceLightColor">#2A2A3C</Color>
        <Color x:Key="SurfaceHoverColor">#38384E</Color>
        
        <Color x:Key="PrimaryColor">#7F5AF0</Color>
        <Color x:Key="PrimaryVariantColor">#6846D6</Color>
        <Color x:Key="SecondaryColor">#2CB67D</Color>
        
        <Color x:Key="TextPrimaryColor">#FFFFFFFF</Color>
        <Color x:Key="TextSecondaryColor">#A0A0B0</Color>
        <Color x:Key="TextTertiaryColor">#707080</Color>
        
        <!-- Brushes -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
        <SolidColorBrush x:Key="SurfaceLightBrush" Color="{StaticResource SurfaceLightColor}"/>
        <SolidColorBrush x:Key="SurfaceHoverBrush" Color="{StaticResource SurfaceHoverColor}"/>
        <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
        <SolidColorBrush x:Key="TextTertiaryBrush" Color="{StaticResource TextTertiaryColor}"/>

        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- ==================== Styles ==================== -->
        
        <!-- Window Caption Button Style -->
        <Style x:Key="CaptionButtonStyle" TargetType="Button">
            <Setter Property="WindowChrome.IsHitTestVisibleInChrome" Value="True"/>
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <Path Data="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}" 
                                  Width="10" Height="10" 
                                  Stretch="Uniform" 
                                  Fill="{TemplateBinding Foreground}" 
                                  HorizontalAlignment="Center" VerticalAlignment="Center" SnapsToDevicePixels="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource SurfaceLightBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource CaptionButtonStyle}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E81123"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Card Style with Shadow -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="4" Direction="270" Opacity="0.3" Color="Black"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern Button Base -->
        <Style x:Key="ModernButtonBase" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.7"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="16,10"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource ModernButtonBase}">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        
        <Style x:Key="OutlineButton" TargetType="Button" BasedOn="{StaticResource ModernButtonBase}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
        </Style>

        <Style x:Key="GhostButton" TargetType="Button" BasedOn="{StaticResource ModernButtonBase}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
                    <Setter Property="Background" Value="#1AFFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>
    
    <!-- Main Window Border (for Resize/Shadow) -->
    <Border Background="{StaticResource BackgroundBrush}" 
            CornerRadius="8" 
            BorderThickness="1" 
            BorderBrush="{StaticResource SurfaceBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Custom TitleBar -->
                <RowDefinition Height="*"/>    <!-- Content -->
            </Grid.RowDefinitions>
            
            <!-- Custom TitleBar -->
            <Grid Grid.Row="0" Height="40" Background="{StaticResource SurfaceBrush}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Icon & Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="16,0,0,0">
                    <Image Source="{StaticResource AppIcon}" Width="20" Height="20" VerticalAlignment="Center" Margin="0,0,12,0" RenderOptions.BitmapScalingMode="HighQuality"/>
                    <TextBlock Text="VoidWarp" Foreground="{StaticResource TextPrimaryBrush}" FontWeight="ExtraBold" FontSize="14" VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- Window Controls -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Style="{StaticResource CaptionButtonStyle}" Tag="M 0,10 L 10,10 M 0,11 L 10,11" Click="MinimizeButton_Click"/>
                    <Button x:Name="MaximizeButton" Style="{StaticResource CaptionButtonStyle}" Tag="M 1,1 L 9,1 L 9,9 L 1,9 Z" Click="MaximizeButton_Click"/>
                    <Button Style="{StaticResource CloseButtonStyle}" Tag="M 0,0 L 10,10 M 0,10 L 10,0" Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>
            
            <!-- Main Content Area -->
            <Grid Grid.Row="1" Margin="24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="380"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Left Sidebar -->
                <StackPanel Grid.Column="0" Margin="0,0,24,0">
                    
                    <!-- Device Identity -->
                    <Border Style="{StaticResource CardStyle}" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Local Device" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" FontWeight="Bold" Margin="0,0,0,10"/>
                            <TextBlock Text="{Binding DeviceId}" Foreground="{StaticResource PrimaryBrush}" FontSize="24" FontWeight="Bold" FontFamily="Consolas"/>
                            <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                                <Ellipse Width="8" Height="8" Fill="{StaticResource SecondaryBrush}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="Online" Foreground="{StaticResource SecondaryBrush}" FontWeight="SemiBold"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- Nearby Devices List -->
                    <Border Style="{StaticResource CardStyle}" Height="400">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <Grid Grid.Row="0" Margin="0,0,0,16">
                                <TextBlock Text="Nearby Devices" Foreground="{StaticResource TextPrimaryBrush}" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                <Button Content="â†»" Style="{StaticResource GhostButton}" HorizontalAlignment="Right" Command="{Binding ScanCommand}" ToolTip="Refresh"/>
                            </Grid>

                            <ListBox Grid.Row="1" 
                                     ItemsSource="{Binding Peers}"
                                     SelectedItem="{Binding SelectedPeer}"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Margin" Value="0,4"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListBoxItem">
                                                    <Border x:Name="ItemBorder" Background="{StaticResource SurfaceLightBrush}" CornerRadius="8" Padding="12" Cursor="Hand">
                                                        <ContentPresenter/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="ItemBorder" Property="Background" Value="{StaticResource SurfaceHoverBrush}"/>
                                                        </Trigger>
                                                        <Trigger Property="IsSelected" Value="True">
                                                            <Setter TargetName="ItemBorder" Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                                            <Setter Property="Foreground" Value="White"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Border Width="36" Height="36" CornerRadius="18" Background="#2A2A3C" Margin="0,0,12,0">
                                                <TextBlock Text="ðŸ“±" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>
                                            </Border>
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding DeviceName}" FontWeight="SemiBold" FontSize="14"/>
                                                <TextBlock Text="{Binding DisplayName}" Opacity="0.7" FontSize="11"/>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            
                            <!-- Empty State -->
                            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="{Binding HasNoPeers, Converter={StaticResource BoolToVis}}">
                                <TextBlock Text="Scanning..." Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                            </StackPanel>

                            <Button Grid.Row="2" Content="+ Add Manual Peer" Style="{StaticResource OutlineButton}" Margin="0,16,0,0" Command="{Binding AddManualPeerCommand}"/>
                        </Grid>
                    </Border>
                </StackPanel>
                
                <!-- Right Content -->
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- File Drop Area -->
                    <Border Grid.Row="0" Style="{StaticResource CardStyle}" Height="220" Margin="0,0,0,24" BorderBrush="{StaticResource SurfaceLightBrush}" BorderThickness="2" CornerRadius="12" Background="Transparent">
                        <Border.InputBindings>
                            <MouseBinding MouseAction="LeftClick" Command="{Binding PickFileCommand}"/>
                        </Border.InputBindings>
                        <Grid>
                             <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" MouseLeftButtonDown="FileSelectArea_MouseLeftButtonDown" Cursor="Hand" Background="Transparent">
                                <Path Data="M 12,2 L 12,18 M 4,10 L 12,18 L 20,10" Stroke="{StaticResource TextSecondaryBrush}" StrokeThickness="2" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                                <TextBlock Text="Drop items here or click to browse" Foreground="{StaticResource TextSecondaryBrush}" FontSize="16" FontWeight="Medium" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding SelectedFileInfo}" Foreground="{StaticResource PrimaryBrush}" FontSize="14" HorizontalAlignment="Center" Margin="0,12,0,0" TextTrimming="CharacterEllipsis"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Actions & Logs -->
                    <Border Grid.Row="1" Style="{StaticResource CardStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <Grid Grid.Row="0" Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="Transmission" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock Text="{Binding StatusMessage}" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,4,0,0"/>
                                </StackPanel>
                                <Button Grid.Column="1" Content="Send File" Style="{StaticResource PrimaryButton}" Width="120" Command="{Binding SendFileCommand}" IsEnabled="{Binding CanSend}"/>
                            </Grid>
                            
                            <ProgressBar Grid.Row="1" Height="6" Value="{Binding ProgressValue}" Background="{StaticResource SurfaceLightBrush}" Foreground="{StaticResource PrimaryBrush}" BorderThickness="0" Margin="0,0,0,20"/>
                            
                            <!-- Simple Log View -->
                            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding Logs}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" Foreground="{StaticResource TextTertiaryBrush}" FontFamily="Consolas" FontSize="12" Margin="0,2"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                    
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
