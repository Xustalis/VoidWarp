<Window x:Class="VoidWarp.Windows.ManualPeerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="手动添加设备"
        Height="240"
        Width="360"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1a1a2e">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="手动添加设备"
                   FontSize="16"
                   FontWeight="Bold"
                   Foreground="#6c63ff"
                   Margin="0,0,0,12"/>

        <TextBlock Grid.Row="1"
                   Text="IP 地址"
                   Foreground="#aaa"
                   FontSize="12"
                   Margin="0,0,0,4"/>
        <TextBox x:Name="IpBox"
                 Grid.Row="2"
                 Height="30"
                 VerticalContentAlignment="Center"
                 Padding="6,0"
                 Background="#2a2a4a"
                 Foreground="White"
                 BorderThickness="0"
                 Text="192.168."/>

        <StackPanel Grid.Row="3" Margin="0,12,0,0">
            <TextBlock Text="端口"
                       Foreground="#aaa"
                       FontSize="12"
                       Margin="0,0,0,4"/>
            <TextBox x:Name="PortBox"
                     Height="30"
                     VerticalContentAlignment="Center"
                     Padding="6,0"
                     Background="#2a2a4a"
                     Foreground="White"
                     BorderThickness="0"
                     Text="42424"/>
            <TextBlock Text="提示: USB 连接可使用 127.0.0.1:42424"
                       Foreground="#666"
                       FontSize="10"
                       Margin="0,6,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="取消"
                    Width="70"
                    Margin="0,0,8,0"
                    Click="Cancel_Click"
                    Background="#333"
                    Foreground="White"
                    BorderThickness="0"/>
            <Button Content="添加"
                    Width="70"
                    Click="Ok_Click"
                    Background="#6c63ff"
                    Foreground="White"
                    BorderThickness="0"/>
        </StackPanel>
    </Grid>
</Window>
