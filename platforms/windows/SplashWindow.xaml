<Window x:Class="VoidWarp.Windows.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VoidWarp"
        Width="420" Height="280"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Topmost="True">
    <Border CornerRadius="20" Background="#1A1A2E" BorderBrush="#2A2A4A" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="24" ShadowDepth="0" Opacity="0.4" Color="Black"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!-- Logo -->
            <Viewbox Grid.Row="0" Width="80" Height="80" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Path Fill="#6C63FF" Data="M 2,4 L 14,24 L 26,4 L 20,4 L 14,18 L 8,4 Z"/>
            </Viewbox>
            <!-- Brand name -->
            <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="0,8,0,0">
                <TextBlock Text="VoidWarp" FontSize="28" FontWeight="Bold" Foreground="#6C63FF" HorizontalAlignment="Center"/>
                <TextBlock Text="局域网安全传输" FontSize="12" Foreground="#B0B0B0" HorizontalAlignment="Center" Margin="0,4,0,0"/>
            </StackPanel>
            <!-- Loading hint -->
            <TextBlock Grid.Row="2" Text="正在启动…" FontSize="11" Foreground="#888888" 
                       HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,24"/>
        </Grid>
    </Border>
</Window>
